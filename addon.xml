<?xml version="1.0" encoding="UTF-8"?>
<addon
    id="plugin.lutris"
    name="Lutris"
    version="2.0.2"
    provider-name="Rob Loach, solbero">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.routing" version="0.2.3"/>
        <import addon="script.common.plugin.cache" version="2.6.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>game</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Play games with Lutris</summary>
        <description lang="en_GB">This add-on is a Lutris front-end for Kodi. The add-on diplays and launches games managed by Lutris.</description>
        <disclaimer lang="en_GB">You need Lutris installed to use this add-on.</disclaimer>
        <license>GPL-2.0-only</license>
        <website>https://lutris.net/</website>
        <news>Version 2.0.2: May 9th, 2021
            - Fix module errors, by @solbero</news>
        <source>https://github.com/RobLoach/lutris-kodi-addon</source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot.jpg</screenshot>
        </assets>
        <platform>linux</platform>
        <language>en</language>
    </extension>
</addon>
