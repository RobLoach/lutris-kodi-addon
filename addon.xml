<?xml version="1.0" encoding="UTF-8"?>
<addon
    id="plugin.lutris"
    name="Lutris"
    version="2.0.2"
    provider-name="Rob Loach, solbero">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.routing" version="0.2.3"/>
        <import addon="script.module.simplecache" version="2.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>game</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Lutris</summary>
        <description lang="en_GB">Lutris Kodi Addon is a frontend for Lutris in Kodi. You need to have Lutris installed to use this add-on.</description>
        <disclaimer lang="en_GB">For more information, visit Lutris.net.</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <website>http://lutris.net</website>
        <news lang="en_GB"></news>
        <source>https://github.com/RobLoach/lutris-kodi-addon</source>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot.jpg</screenshot>
        </assets>
        <platform>linux</platform>
        <language>en</language>
    </extension>
</addon>
