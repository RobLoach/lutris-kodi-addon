<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <!-- General -->
    <category label="30100">
        <!-- Lutris Executable -->
        <setting id="use_custom_path"
          type="bool"
          label="30103"
          default="false" />
        <!-- Lutris Executable -->
        <setting id="lutris_executable"
            type="file"
            label="30101"
            value="/usr/bin/lutris"
            default="/usr/bin/lutris"
            enable="eq(-1,true)" />
        <!-- Lutris Executable -->
        <setting id="installed"
            type="bool"
            label="30102"
            default="false" />
        <!-- Lutris Username-->
        <setting id="username"
                 type="text"
                 label="30104"
                 default=""/>
        <!-- Lutris Password-->
        <setting id="password"
                 type="text"
                 option="hidden"
                 enable="!eq(-1,)"
                 label="30105"
                 default=""/>
    </category>
</settings>
