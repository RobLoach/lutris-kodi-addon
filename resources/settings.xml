<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<settings version="1">
    <section id="plugin.lutris">

        <!-- General -->
        <category id="general" label="30100">
            <group id="1" label="">

                <!-- Enable Custom Path -->
                <setting id="enable_custom_path" type="boolean" label="30101" help="">
                    <level>1</level>
                    <default>false</default>
                    <control type="toggle"/>
                </setting>

                <!-- Lutris Executable Path -->
                <setting id="path_to_executable" type="path" label="30102" help="" parent="custom_path">
                    <level>1</level>
                    <default>/usr/games/lutris</default>
                    <constraints>
                        <writable>false</writable>
		                <masking>executable</masking>
		                <allowempty>true</allowempty>
                    </constraints>
                    <control type="button" format="file">
                        <heading>30101</heading>
                    </control>
                    <dependencies>
                        <dependency type="enable" setting="enable_custom_path">true</dependency>
                    </dependencies>
                </setting>

                <!-- Prefer covers over icons -->
                <setting id="prefer_covers" type="boolean" label="30107" help="">
                    <level>1</level>
                    <default>false</default>
                    <control type="toggle"/>
                </setting>

                <!-- Open Lutris Application -->
                <setting id="lutris" type="action" label="30103" help="">
                    <level>0</level>
                    <data>RunPlugin(plugin://plugin.lutris/lutris/)</data>
                    <control type="button" format="action">
                        <close>true</close>
                    </control>
                </setting>

            </group>
        </category>

        <!-- General -->
        <category id="cache" label="30104">
            <group id="2" label="">

                <!-- Set cache expiration -->
                <setting id="cache_expire_days" type="integer" label="30105" help="">
                    <level>1</level>
                    <default>30</default>
                    <constraints>
		                <minimum>0</minimum>
		                <step>1</step>
		                <maximum>30</maximum>
	                </constraints>
                    <control type="slider" format="integer">
		                <popup>false</popup>
                    </control>
                </setting>

                <!-- Update games -->
                <setting id="update" type="action" label="30106" help="">
                    <level>0</level>
                    <data>RunPlugin(plugin://plugin.lutris/update)</data>
                    <control type="button" format="action">
                        <close>false</close>
                    </control>
                </setting>

            </group>
        </category>
    </section>
</settings>
